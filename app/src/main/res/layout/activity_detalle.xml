<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".DetailActivity">

    <ImageView
        android:id="@+id/detail_image"
        android:layout_width="300sp"
        android:layout_height="300sp"
        tools:background="#807D7D"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/detail_age"
        android:layout_width="0dp"
        android:layout_height="30dp"
        tools:text="EDAD"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/detail_name"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/detail_name"
        android:layout_width="0dp"
        android:layout_height="30dp"
        tools:text="NOMBRE Y APELLIDO"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/detail_image"
        android:gravity="center"
        />
    <TextView
        android:id="@+id/detail_country"
        android:layout_width="0dp"
        android:layout_height="30dp"
        tools:text="PAIS"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/detail_age"
        android:gravity="center"
        />
    <TextView
        android:id="@+id/detail_mail"
        android:layout_width="0dp"
        android:layout_height="30dp"
        tools:text="EMAIL"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/detail_country"
        android:gravity="center"
        />
    <TextView
        android:id="@+id/detail_cel"
        android:layout_width="0dp"
        android:layout_height="30dp"
        tools:text="TELEFONO"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/detail_mail"
        android:gravity="center"
        />
    <TextView
        android:id="@+id/detail_address"
        android:layout_width="0dp"
        android:layout_height="30dp"
        tools:text="DIRECCION"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/detail_cel"
        android:gravity="center"
        />
</androidx.constraintlayout.widget.ConstraintLayout>